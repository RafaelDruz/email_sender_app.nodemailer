<body>


<div class="LoginForm">
   <form action="/sendmsg" method="POST" class="loginform">
     <h1 class="heading">Message Sending</h1>
     <label for="content" class="head">Conte√∫do:</label>
     <textarea id="content" placeholder="Enter the message content" class="box" required name="content"></textarea>
     <input type="submit" id="my-form-button" value="Send">
     <div id="my-form-status" class="inf_status"></div>
   </form>
   
 </div>

 <% if ( success ) { %>
  <script>
      alert("Email sent successfully!");
  </script>
<% } %>

<% if ( failure ) { %>
  <script>
      alert("Error sending email.");
  </script>
<% } %>


